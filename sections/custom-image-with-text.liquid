{%- style -%}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.mobile_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
{%- endstyle -%}
{{ 'custom-image-with-text.css' | asset_url | stylesheet_tag }}

{%- comment -%}
  This section displays a custom image with text, including a banner image, heading, description, button, and footer text.
  It supports both desktop and mobile views with responsive images.
{%- endcomment -%}

<section class="custom-image-with-text padding-{{ section.id }}">
  <div class="custom-image-with-text-wrapper first-fold">
    {% if section.settings.banner_image != blank %}
      <div class="image-banner-main-wrapper">
        <picture>
          {% if section.settings.banner_image_mobile %}
            <source
              media="(max-width: 767px)"
              srcset="{{ section.settings.banner_image_mobile | image_url: width: 800 }}"
            >
          {% endif %}
          {% if section.settings.banner_image %}
            <source
              media="(min-width: 768px)"
              srcset="{{ section.settings.banner_image | image_url: width: 2000 }}"
            >
          {% endif %}

          <img
            src="{{ section.settings.banner_image | image_url: width: 2000 }}"
            alt="Banner Image"
            loading="lazy"
            class="w-full h-auto"
            height="auto"
            width="100%"
          >
        </picture>
        
      </div>
      {% if section.settings.button_label and section.settings.button_link %}
          <a href="{{ section.settings.button_link }}" class="custom-image-with-text-button main-banner-button hide-desktop">
            <span>{{ section.settings.button_label }}</span>
            <span>{% render 'icon-arrow', custom: "custom-icon-arrow" %}</span>
          </a>
      {% endif %}
    {% else %}
      <div class="image-banner-main-wrapper placeholder">
        {{ 'lifestyle-2' | placeholder_svg_tag: 'image-text-banner' }}
      </div>
    {% endif %}
  </div>
  <div class="custom-image-with-text-content-wrapper second-fold">
    <div class="custom-image-with-text-content">
      <h2 class="custom-image-with-text-heading">{{ section.settings.heading }}</h2>
      <div class="custom-image-with-text-description">
        {{ section.settings.description }}
      </div>
      {% if section.settings.button_label and section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="custom-image-with-text-button">
          <span>{{ section.settings.button_label }}</span>
          <span>{% render 'icon-arrow', custom: "custom-icon-arrow" %}</span>
        </a>
      {% endif %}
    </div>
    {% if section.settings.secondary_banner_image %}
      <div class="secondary-banner-image-wrapper">
        <img
          src="{{ section.settings.secondary_banner_image | image_url: width: 800 }}"
          alt="Secondary Banner"
          class="secondary-banner-image"
          height="100%"
          width="100%"
        >
      </div>
    {% endif %}
  </div>
  {% if section.settings.footer_text %}
    <div class="custom-image-with-text-footer">
      <p class="custom-image-with-text-footer-text mobile-hidden">{{ section.settings.footer_text}}</p>
      <p class="custom-image-with-text-footer-text desktop-hidden">{{ section.settings.footer_text_mobile }}</p>
    </div>
  {% endif %}
</section>
{% schema %}
{
  "name": "Custom Image with Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image Desktop"
    },
    {
      "type": "image_picker",
      "id": "banner_image_mobile",
      "label": "Banner Image Mobile"
    },
    {
      "type": "header",
      "content": "Secondary Banner Image Settings"
    },
    {
      "type": "image_picker",
      "id": "secondary_banner_image",
      "label": "Secondary Banner Image",
      "info": "This image is only for desktop view. It will not be displayed on mobile devices."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Custom Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Description details</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Banner footer Text Settings"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "This is a footer text"
    },
    {
      "type": "text",
      "id": "footer_text_mobile",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
    },
    {
      "type": "header",
      "content": "Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Padding top (Mobile)",
      "default": 32,
      "min": 0,
      "max": 100,
      "step": 4
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Padding bottom (Mobile)",
      "default": 32,
      "min": 0,
      "max": 100,
      "step": 4
    }
  ],
  "presets": [
    {
      "name": "Custom Image with Text"
    }
  ]
}
{% endschema %}
